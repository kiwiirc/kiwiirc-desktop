{
    "productName": "Kiwi IRC",
    "appId": "com.kiwiirc.desktop",
    "artifactName": "${name}_v${version}_${os}_${arch}.${ext}",
    "directories": {
        "output": "build"
    },
    "files": [
        "kiwiirc/dist/**/*",
        "static/**/*",
        "src/**/*",
        "package.json"
    ],
    "dmg": {
        "contents": [
            {
                "x": 410,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            },
            {
                "x": 130,
                "y": 150,
                "type": "file"
            }
        ],
        "window": {
            "x": 400,
            "y": 100,
            "width": 540,
            "height": 380
        }
    },
    "mac": {
        "icon": "static/icons/kiwiirclogo.icns",
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ]
    },
    "win": {
        "icon": "static/icons/kiwiirclogo.ico",
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64",
                    "ia32"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "ia32"
                ]
            }
        ]
    },
    "linux": {
        "icon": "static/icons",
        "category": "chat",
        "target": [
            {
                "target": "deb",
                "arch": [
                    "x64",
                    "arm64",
                    "ia32",
                    "armv7l"
                ]
            },
            {
                "target": "rpm",
                "arch": [
                    "x64",
                    "arm64",
                    "ia32",
                    "armv7l"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64",
                    "ia32",
                    "armv7l"
                ]
            }
        ]
    }
}
